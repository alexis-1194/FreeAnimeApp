<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            tools:context=".ui.view.fragment.GeneralInfoFragment">

            <!-- Imagen del Anime -->
            <ImageView
                android:id="@+id/anime_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Anime image"
                android:layout_marginBottom="16dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <!-- Título del Anime -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Anime"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal" />

            <!-- Información en filas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Título en Inglés -->
                    <TextView
                        android:id="@+id/english_title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Título en Inglés"
                        android:textColor="@color/conrete"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Episodios -->
                    <TextView
                        android:id="@+id/episodiosTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Episodios:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/episodios_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Score -->
                    <TextView
                        android:id="@+id/scoreTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56.5"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Siguiente fila de información -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Clasificación -->
                    <TextView
                        android:id="@+id/ratedTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clasificación:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rated_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PG-13"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Géneros -->
                    <TextView
                        android:id="@+id/genresTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Géneros:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/genres_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acción, Aventura, Fantasía"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Más información en columnas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Estado -->
                    <TextView
                        android:id="@+id/statusTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completo"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Emitido -->
                    <TextView
                        android:id="@+id/airedTitle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emitido:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/aired_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2002 - 2007"
                        android:textColor="@color/conrete"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Última fila con los estudios -->
            <TextView
                android:id="@+id/studiosTitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Estudios:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/studios_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio Pierrot"
                android:textColor="@color/conrete"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</layout>
